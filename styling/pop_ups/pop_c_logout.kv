<Pop_Logout>:

    id: popup_logout

    title: "Logout"

    title_size: "38"

    title_align: "center"
    size_hint: (.8, .5)
    pos_hint: {"center_x": .5, "center_y": .65}
    title_color: (1, 1, 1, 1)
    separator_color: (1, 1, 1, 1)
    separator_height: "1dp"
    padding: 0
    #background: "images_icons_and_videos/burger_menu_BACKGROUND.png"

    RelativeLayout:

        Label:
            id: message

            text: "Are you sure you want to log out?"
            size_hint: (1, .08)
            pos_hint: {"center_x": .5, "center_y": .8}

            text_size: self.size
            halign: "center"
            valign: "center"

            background_color: (.8, .4, .4, .5)


        Button:
            id: yes_button
            text: "Yes"

            pos_hint: {"center_x": .3, "center_y": .3}
            size_hint: (.38, .08)

            on_release:
                root.logout()
                app.root.current = "login"
                root.dismiss()

        Button:
            id: cancel_button

            text: "Cancel"

            pos_hint: {"center_x": .7, "center_y": .3}
            size_hint: (.38, .08)

            on_release:
                root.dismiss()
