
<Pop_BurgerMenu>:

    title: "Menu"
    title_size: root.font_size_of_title

    title_align: "center"
    size_hint: (.6, .7)
    pos_hint: {"x":.4, "top": .9}
    title_color: (0, 0, 0, 1)
    separator_color: (0, 0, 0, 1)
    separator_height: "1dp"
    padding: 0
    background: "resources/images/burger_menu_BACKGROUND.png"

    RelativeLayout:

        background_color: (1, 1, 1, 1)

        Button:
            id: create_budget

            text: "Create Budget"

            font_size: root.font_size_of_buttons
            color: (0, 0, 0, 1)

            background_color: (1, 1, 1, 0)

            size_hint: (root.with_of_buttons, root.height_of_buttons)
            pos_hint: {'center_x': .5, "top": 1}

            on_release:
                #app.root.current = "screen_B"
                root.dismiss()



        Button:
            id: your_budgets

            text: "Your Budgets"

            font_size: root.font_size_of_buttons
            color: (0, 0, 0, 1)
            background_color: (1, 1, 1, 0)

            size_hint: (root.with_of_buttons, root.height_of_buttons)
            pos_hint: {'center_x': .5, "top": 1 - (1*root.y_space_from_button_top_to_button_top)}

            on_release:
                #app.root.current = "screen_H"
                root.dismiss()


        Button:
            id: advices
            text: "Advices and Financial Guidance"

            font_size: root.font_size_of_buttons
            color: (0, 0, 0, 1)
            size_hint: (root.with_of_buttons, root.height_of_buttons)
            background_color: (1, 1, 1, 0)
            pos_hint: {'center_x': .5, "top": 1 - (2*root.y_space_from_button_top_to_button_top)}

            on_release:
                root.dismiss()


        Button:
            id: how_to_make_money
            text: "How To Make Money"

            font_size: root.font_size_of_buttons
            color: (0, 0, 0, 1)
            size_hint: (root.with_of_buttons, root.height_of_buttons)
            background_color: (1, 1, 1, 0)
            pos_hint: {'center_x': .5, "top": 1 - (3*root.y_space_from_button_top_to_button_top)}


        Button:
            id: learn_the_app

            text: "Learn The App"

            font_size: root.font_size_of_buttons
            color: (0, 0, 0, 1)
            size_hint: (root.with_of_buttons, root.height_of_buttons)
            background_color: (1, 1, 1, 0)
            pos_hint: {'center_x': .5, "top": 1 - (4*root.y_space_from_button_top_to_button_top)}

            on_release:
                root.dismiss()


        Button:
            id: settings

            text: "Settings"

            font_size: root.font_size_of_buttons
            color: (0, 0, 0, 1)
            size_hint: (root.with_of_buttons, root.height_of_buttons)
            background_color: (1, 1, 1, 0)
            pos_hint: {'center_x': .5, "top": 1 - (5*root.y_space_from_button_top_to_button_top)}

            on_release:
                root.dismiss()



        Button:
            id: your_account
            text: "Your Account"

            font_size: root.font_size_of_buttons
            color: (0, 0, 0, 1)
            size_hint: (root.with_of_buttons, root.height_of_buttons)
            background_color: (1, 1, 1, 0)
            pos_hint: {'center_x': .5, "top": 1 - (6*root.y_space_from_button_top_to_button_top)}

            on_release:
                root.dismiss()

        Button:
            id: log_out
            text: "Log out"

            font_size: root.font_size_of_buttons
            color: (0, 0, 0, 1)
            size_hint: (root.with_of_buttons, root.height_of_buttons)
            background_color: (1, 1, 1, 0)
            pos_hint: {'center_x': .5, "top": 1 - (7*root.y_space_from_button_top_to_button_top)}

            on_release:
                root.popup_logout()
                root.dismiss()