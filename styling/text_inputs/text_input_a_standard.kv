


<TextInput_Standard>:
    id: text_input

    cursor_color: (0,0,0,1)
    #text_size: self.size
    halign: "left"
    valign: "center"
    hint_text_color: (.8, .8, .8, 1)
    foreground_color: (0, 0, 0, 1)
    selection_color: (.4, .8, .6, .4)
    multiline: False

    font_size: 32
    #size_hint: (None, None)
    size: (100, 50)
    background_normal: "resources/images/text_input_figma_test.png"
    background_active: "resources/images/text_input_from_figma_gold.png"

    # This is currently how the text is placed in the middle of the text input box
    padding: (10, 17, 0, 0)


    on_text:
        if self.check_username == True: root.on_text_username_checking_if_username_exists()

