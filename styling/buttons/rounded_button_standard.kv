
<RoundedButtonGreen@Button>

    background_color: (0, 0, 0, 0)
    background_normal: ''

    canvas.before:

        Color:
            rgba: (40/255, 105/255, 57/255, .5)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10]



