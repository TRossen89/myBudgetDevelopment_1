<CreateUser>:

    on_enter:
        root.save_as_current_screen()

    on_pre_leave:
        root.save_as_previous_screen()


<CreateUser_MainFrame>:


    RelativeLayout:
        id: background_box
        pos_hint: {"center_x": root.background_box_pos_center_x, "top": root.background_box_pos_top}
        size_hint: (root.background_box_width, root.background_box_height)
        #background_color: (.8, .7, .6)


        canvas:
            Color:
                rgba: (.2, .16, .14, .4)
            RoundedRectangle:
                size: self.size
                radius: [root.background_box_corners_radius]


    Label:
        id: enter_username_label
        text: "Enter a username:"
        pos_hint: {"center_x": root.enter_username_label_pos_center_x, "top": root.enter_username_label_pos_top}
        size_hint: (root.enter_username_label_width, root.enter_username_label_height)
        color: (1, 1, 1)


    Label:
        id: enter_password_label_1
        text: "Enter a password:"
        pos_hint: {"center_x": root.enter_password_1_label_pos_center_x, "top": root.enter_password_1_label_pos_top}
        size_hint: (root.enter_password_1_label_width, root.enter_password_1_label_height)
        color: (1, 1, 1)



    Label:
        id: enter_password_label_2

        text: "Enter password again:"
        color: (1, 1, 1)

        size_hint: (root.enter_password_2_label_width, root.enter_password_2_label_height)
        pos_hint: {"center_x": root.enter_password_2_label_pos_center_x, "top": root.enter_password_2_label_pos_top}



    Button:
        id: create_user_button

        text: "Create user"

        background_normal: ''
        background_color: (.2, .02, .02)

        size_hint: (root.create_user_button_width, root.create_user_button_height)
        pos_hint: {"center_x": root.create_user_button_pos_center_x, "top": root.create_user_button_pos_top}

        on_release:
            root.create_user()






