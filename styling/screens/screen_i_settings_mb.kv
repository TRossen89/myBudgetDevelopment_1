<SettingsMB>:


    on_enter:
        root.save_as_current_screen()

    on_pre_leave:
        root.save_as_previous_screen()


<SettingsMB_MainFrame>:



    Button:

        background_normal: ""
        background_color: (0, 0, 0, 1)

        size_hint: (root.all_background_buttons_width, root.all_background_buttons_height)
        pos_hint:{"center_x": root.all_background_buttons_pos_center_x, "top": root.all_labels_reference_pos_top}

        on_release:
            app.root.current = "choose_language"


    Label:

        id: language_describing_label

        text: "Language:"
        color: (.6, .1, .3, 1)
        font_size: 32
        text_size: self.size
        halign: "left"
        valign: "center"


        size_hint: (root.all_describing_labels_width, root.all_describing_labels_height)
        pos_hint: {"x": root.all_describing_labels_pos_x, "top": root.all_labels_reference_pos_top}



    Label:

        id: language_informing_label

        text: ""
        color: (.68, .68, .68, 1)
        font_size: 32
        text_size: self.size
        halign: "right"
        valign: "center"

        size_hint: (root.all_informing_labels_width, root.all_informing_labels_height)
        pos_hint: {"x": root.all_informing_labels_pos_x, "top": root.all_labels_reference_pos_top}




