<SettingsMB>:

    on_pre_leave:
        root.save_as_previous_screen()


<SettingsMB_MainFrame>:



    Button:

        background_normal: ""
        background_color: (0, 0, 0, 1)

        size_hint: (1, root.height_of_labels)
        pos_hint:{"center_x": .5, "top": 1 - root.y_space_between_top_bar_and_first_label}

        on_release:
            app.root.current = "choose_language"


    Label:

        id: language_describing_label

        text: "Language:"
        color: (.6, .1, .3, 1)
        font_size: 32
        halign: "right"


        pos_hint: {"x": root.x_pos_of_all_describing_labels, "top": 1 - root.y_space_between_top_bar_and_first_label}
        size_hint: (root.width_of_labels, root.height_of_labels)


    Label:

        id: language_informing_label

        text: ""
        color: (.68, .68, .68, 1)
        font_size: 32

        pos_hint: {"x": root.x_pos_of_all_informing_labels, "top": 1 - root.y_space_between_top_bar_and_first_label}
        size_hint: (root.width_of_labels, root.height_of_labels)




