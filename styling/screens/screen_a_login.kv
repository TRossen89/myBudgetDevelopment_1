

<Login>:

    on_pre_leave:
        root.save_as_previous_screen()

    Button:
        pos_hint: {"center_x": .3, "center_y":.3}
        size_hint: (.38, .06)
        text: "Login"
        color: (.8, .6, .8, 1)
        background_normal: ''
        background_color: (.2, .06, .1)
        on_release:
            root.login()
            #app.root.current = "frontpage"

    RoundedButton:
        pos_hint: {"center_x": .7, "center_y":.3}
        size_hint: (.38, .06)
        text: "Create user"
        color: (.6, .3, .5)
        #background_normal: ''
        #background_color: (.8, .6, .8, 1)
        #border: (15, 15, 15, 15)
        on_release:
            app.root.current = "create_user"



<RoundedButton@Button>

    background_color: (0, 0, 0, 0)
    background_normal: ''
    canvas.before:

        Color:
            rgba: (45/255, 86/255, 182/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10]








