
<Login>:

    on_pre_leave:
        root.save_as_previous_screen()

<Login_MainFrame>:

    Button:
        id: english_button

        text: "English"
        color: (1, 1, 1, 1)
        font_size: root.language_buttons_font_size

        background_normal: ''
        background_color: (.2, .06, .1)

        pos_hint: {"center_x": root.english_button_pos_center_x, "top": root.language_buttons_pos_top}
        size_hint: (root.language_buttons_width, root.language_buttons_height)

        on_release:
            root.english_as_language()

    Button:
        id: danish_button

        text: "Dansk"
        color: (1, 1, 1, 1)
        font_size: root.language_buttons_font_size

        background_normal: ''
        background_color: (.2, .06, .1)

        size_hint: (root.language_buttons_width, root.language_buttons_height)
        pos_hint: {"center_x": root.danish_button_pos_center_x, "top": root.language_buttons_pos_top}

        on_release:
            root.danish_as_language()




    RoundedButtonGold:
        id: why_make_a_budget_button

        text: "Why make a budget?"
        color: (45/255, 46/255, 44/255, 1)
        font_size: root.why_budget_and_trailer_buttons_font_size

        size_hint: (root.why_budget_and_trailer_buttons_width, root.why_budget_and_trailer_buttons_height)
        pos_hint: {"center_x": root.why_budget_and_trailer_buttons_pos_center_x, "top": root.why_budget_button_pos_top}
        #Row
        #pos_hint: {"center_x": root.why_budget_button_pos_center_x, "top": root.why_budget_and_trailer_buttons_pos_top}






    RoundedButtonGold:
        id: see_app_trailer_button

        text: "See app trailer"
        color: (45/255, 46/255, 44/255, 1)
        font_size: root.why_budget_and_trailer_buttons_font_size

        size_hint: (root.why_budget_and_trailer_buttons_width, root.why_budget_and_trailer_buttons_height)
        pos_hint: {"center_x": root.why_budget_and_trailer_buttons_pos_center_x, "top": root.trailer_button_pos_top}
        #Row
        #pos_hint: {"center_x": root.trailer_button_pos_center_x, "top": root.why_budget_and_trailer_buttons_pos_top}


    RelativeLayout:
        id: login_box_layout

        pos_hint: {"center_x": root.login_box_layout_pos_center_x, "top": root.login_box_layout_pos_top}
        size_hint: (root.login_box_layout_width, root.login_box_layout_height)

        #background_color: (.2, .16, .14, .4)
        background_normal: ''
        canvas:
            Color:
                rgba: (.2, .16, .14, .4)
            RoundedRectangle:
                size: self.size
                radius: [10]

    Label:
        id: login_label

        text: "Login"
        color: (0, 0, 0, 1)
        font_size: root.login_label_font_size



        size_hint: (root.login_label_width, root.login_label_height)
        pos_hint: {"center_x": root.login_label_pos_center_x, "top": root.login_label_pos_top}


    Label:
        id: enter_username_label

        text: "Enter username:"
        color: (0, 0, 0, 1)
        text_size: self.size
        halign: "left"
        valign: "center"

        size_hint: (root.username_password_labels_width, root.username_password_labels_height)
        pos_hint: {"center_x": root.username_password_labels_and_text_inputs_pos_center_x, "top": root.username_label_pos_top}



    Label:
        id: enter_password_label

        text: "Enter password:"
        color: (0, 0, 0, 1)

        text_size: self.size
        halign: "left"
        valign: "center"

        size_hint: (root.username_password_labels_width, root.username_password_labels_height)
        pos_hint: {"center_x": root.username_password_labels_and_text_inputs_pos_center_x, "top": root.password_label_pos_top}





    Button:

        id: forgot_password_button

        text: "Forgot my password"
        background_color: (0, 0, 0, 0)
        color: (0, 0, 0, 1)
        font_size: 22

        underline: True

        size_hint: (root.forgot_password_button_width, root.forgot_password_button_height)
        pos_hint: {"center_x": root.forgot_password_button_pos_center_x, "top": root.forgot_password_button_pos_top}

        on_press:
            root.on_press_color()

        on_release:
            root.reset_password_popup()





    RoundedButtonGreen:
        id: login_button

        text: "Login"
        color: (45/255, 46/255, 44/255, 1)
        font_size: root.login_and_create_user_buttons_font_size

        size_hint: (root.login_button_width, root.login_and_create_user_buttons_height)
        pos_hint: {"center_x": root.login_and_create_user_buttons_pos_center_x, "top": root.login_button_pos_top}

        on_release:
            root.login()



    Label:
        id: or_label

        text: "or"
        color: (0, 0, 0, 1)
        font_size: root.or_label_font_size
        italic: True

        size_hint: (root.or_label_width, root.or_label_height)
        pos_hint: {"center_x": root.or_label_pos_center_x, "top": root.or_label_pos_top}





    RoundedButtonWhite:
        id: create_user_button

        text: "Create user"
        color: (.6, .3, .5, 1)
        font_size: root.login_and_create_user_buttons_font_size

        size_hint: (root.create_user_button_width, root.login_and_create_user_buttons_height)
        pos_hint: {"center_x": root.login_and_create_user_buttons_pos_center_x, "top": root.create_user_button_pos_top}

        on_release:
            app.root.current = "create_user"

















