

<Login_MainFrame>:

    Button:
        id: english_button

        pos_hint: {"center_x": .8, "top":.9}
        size_hint: (.1, .03)
        text: "English"
        font_size: 16
        color: (.8, .6, .8, 1)
        background_normal: ''
        background_color: (.2, .06, .1)
        on_release:
            root.english_as_language()

    Button:
        id: danish_button

        pos_hint: {"center_x": .68, "top":.9}
        size_hint: (.1, .03)
        text: "Dansk"
        font_size: 16

        color: (.8, .6, .8, 1)
        background_normal: ''
        background_color: (.2, .06, .1)
        on_release:
            root.danish_as_language()


    Button:
        id: login_button

        pos_hint: {"center_x": .3, "center_y":.3}
        size_hint: (.38, .06)
        text: "Login"
        color: (.8, .6, .8, 1)
        background_normal: ''
        background_color: (.2, .06, .1)
        on_release:
            root.login()
            #app.root.current = "frontpage"

    RoundedButton:
        id: create_user_button
        pos_hint: {"center_x": .7, "center_y":.3}
        size_hint: (.38, .06)
        text: "Create user"
        color: (.6, .3, .5)

        on_release:
            app.root.current = "create_user"




<Login>:

    on_pre_leave:
        root.save_as_previous_screen()












