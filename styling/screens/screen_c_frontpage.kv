
<Frontpage>:


    on_enter:
        root.save_as_current_screen()


    on_pre_leave:
        root.save_as_previous_screen()

<Frontpage_MainFrame>:

    RelativeLayout:

        id: background_box

        pos_hint: {"center_x": root.background_box_pos_center_x, "top": root.background_box_pos_top}
        size_hint: (root.background_box_width, root.background_box_height)
        #background_color: (.8, .7, .6)

        canvas:
            Color:
                rgba: .6, .3, .4, 1
            Rectangle:
                size: self.size

    Button:
        id: create_budget_button

        text: "Create Budget"
        color: (.8, .6, .8, 1)

        background_color: (.6, .3, .5)

        size_hint: (root.all_buttons_width, root.all_buttons_height)
        pos_hint: {"center_x": root.all_buttons_pos_center_x , "top": root.all_buttons_reference_pos_top}



    Button:
        id: your_budgets_button

        text: "Your Budgets"
        color: (.8, .6, .8, 1)

        background_color: (.6, .3, .5)

        size_hint: (root.all_buttons_width, root.all_buttons_height)
        pos_hint: {"center_x": root.all_buttons_pos_center_x , "top": root.all_buttons_reference_pos_top - (1*root.all_buttons_from_top_to_top_space)}





    Button:
        id: advices_and_financial_guidance_button

        text: "Advices And Financial Guidance"
        color: (.8, .6, .8, 1)

        background_color: (.6, .3, .5)

        size_hint: (root.all_buttons_width, root.all_buttons_height)
        pos_hint: {"center_x": root.all_buttons_pos_center_x , "top": root.all_buttons_reference_pos_top - (2*root.all_buttons_from_top_to_top_space)}




    Button:
        id: how_to_make_money_button

        text: "How To Make Money"
        color: (.8, .6, .8, 1)

        background_color: (.6, .3, .5)

        size_hint: (root.all_buttons_width, root.all_buttons_height)
        pos_hint: {"center_x": root.all_buttons_pos_center_x , "top": root.all_buttons_reference_pos_top - (3*root.all_buttons_from_top_to_top_space)}






    Button:

        id: learn_the_app_button

        text: "Learn The App"
        color: (.8, .6, .8, 1)

        background_color: (.6, .3, .5)

        size_hint: (root.all_buttons_width, root.all_buttons_height)
        pos_hint: {"center_x": root.all_buttons_pos_center_x , "top": root.all_buttons_reference_pos_top - (4*root.all_buttons_from_top_to_top_space)}


    Button:

        id: settings_button

        text: "Settings"
        color: (.8, .6, .8, 1)

        background_color: (.6, .3, .5)

        size_hint: (root.all_buttons_width, root.all_buttons_height)
        pos_hint: {"center_x": root.all_buttons_pos_center_x , "top": root.all_buttons_reference_pos_top - (5*root.all_buttons_from_top_to_top_space)}




        on_release:
            app.root.current = "settings_mb"


    Button:
        id: your_account_button

        text: "Your Account"
        color: (.8, .6, .8, 1)

        background_color: (.6, .3, .5)

        size_hint: (root.all_buttons_width, root.all_buttons_height)
        pos_hint: {"center_x": root.all_buttons_pos_center_x , "top": root.all_buttons_reference_pos_top - (6*root.all_buttons_from_top_to_top_space)}





    Button:
        id: logout_button

        text: "Log out"
        color: (.8, .6, .8, 1)

        background_color: (.6, .3, .5)

        size_hint: (root.all_buttons_width, root.all_buttons_height)
        pos_hint: {"center_x": root.all_buttons_pos_center_x , "top": root.all_buttons_reference_pos_top - (7*root.all_buttons_from_top_to_top_space)}

        on_release:
            root.logout()




