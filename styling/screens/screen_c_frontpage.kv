<Frontpage>:

    on_pre_leave:
        root.save_as_previous_screen()

    RelativeLayout:

        id: all_buttons_box

        pos_hint: {"center_x": .5, "top": root.y_pos_of_all_buttons_box}
        size_hint: (root.width_of_all_buttons_box, root.height_of_all_buttons_box)
        #background_color: (.8, .7, .6)

        canvas:
            Color:
                rgba: .6, .3, .4, 1
            Rectangle:
                size: self.size

        Button:
            text: "Create Budget"

            pos_hint: {"center_x": .5, "top": 1}
            size_hint: (root.width_of_all_buttons, root.height_of_all_buttons)

            color: (.8, .6, .8, 1)
            background_color: (.6, .3, .5)


        Button:

            text: "Your Budgets"

            pos_hint: {"center_x": .5, "top": 1 - (root.y_space_between_all_buttons + root.height_of_all_buttons)}
            size_hint: (root.width_of_all_buttons, root.height_of_all_buttons)

            color: (.8, .6, .8, 1)
            background_color: (.6, .3, .5)

        Button:

            text: "Advices And Financial Guidance"

            pos_hint: {"center_x": .5, "top":1 - (2*(root.height_of_all_buttons+root.y_space_between_all_buttons))}
            size_hint: (root.width_of_all_buttons, root.height_of_all_buttons)

            color: (.8, .6, .8, 1)
            background_color: (.6, .3, .5)

        Button:

            text: "Why Make A Budget?"

            pos_hint: {"center_x": .5, "top":1 - (3*(root.height_of_all_buttons+root.y_space_between_all_buttons))}
            size_hint: (root.width_of_all_buttons, root.height_of_all_buttons)

            color: (.8, .6, .8, 1)
            background_color: (.6, .3, .5)


        Button:

            text: "How To Make Money"

            pos_hint: {"center_x": .5, "top":1 - (4*(root.height_of_all_buttons+root.y_space_between_all_buttons))}
            size_hint: (root.width_of_all_buttons, root.height_of_all_buttons)

            color: (.8, .6, .8, 1)
            background_color: (.6, .3, .5)


        Button:

            text: "How To Start Your Own Business"

            pos_hint: {"center_x": .5, "top":1 - (5*(root.height_of_all_buttons+root.y_space_between_all_buttons))}
            size_hint: (root.width_of_all_buttons, root.height_of_all_buttons)

            color: (.8, .6, .8, 1)
            background_color: (.6, .3, .5)


        Button:

            text: "Learn The App"

            pos_hint: {"center_x": .5, "top": 1 - (6*(root.height_of_all_buttons+root.y_space_between_all_buttons))}
            size_hint: (root.width_of_all_buttons, root.height_of_all_buttons)

            color: (.8, .6, .8, 1)
            background_color: (.6, .3, .5)



        Button:

            text: "Settings"

            pos_hint: {"center_x": .5, "top": 1 - (7*(root.height_of_all_buttons+root.y_space_between_all_buttons))}
            size_hint: (root.width_of_all_buttons, root.height_of_all_buttons)

            color: (.8, .6, .8, 1)
            background_color: (.6, .3, .5)

        Button:

            text: "Your Account"

            pos_hint: {"center_x": .5, "top": 1 - (8*(root.height_of_all_buttons+root.y_space_between_all_buttons))}
            size_hint: (root.width_of_all_buttons, root.height_of_all_buttons)

            color: (.8, .6, .8, 1)
            background_color: (.6, .3, .5)

